<p id="notice"><%= notice %></p>

<h1>Listing Matieres</h1>
<div class="table-responsive">
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Note</th>
      <th>Emailprof</th>
      <th>User</th>
      <th>Student</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matieres.each do |matiere| %>
      <tr>
        <td><%= matiere.nom %></td>
        <td><%= matiere.note %></td>
        <td><%= matiere.emailprof %></td>
        <td><%= matiere.user.email %></td>
        <td><%= matiere.student.nom%></td>
        <td><%= matiere.classroom.nom %></td>
        <td><%= link_to 'Show', matiere %></td>
        <td><%= link_to 'Edit', edit_matiere_path(matiere) %></td>
        <td><%= link_to 'Destroy', matiere, method: :delete, data: { confirm: 'Etes-vous sure de voulour le faire ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

